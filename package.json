{
  "name": "coinpush-wrap",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel start-client start-server",
    "start-client": "cd ./coinpush-client-web && npm start",
    "start-server": "npm-run-all --parallel start-api start-nginx start-cdn",
    "start-api": "cd ./coinpush-api && npm start",
    "start-nginx": "cd ./coinpush-nginx && npm start",
    "start-cdn": "cd ./coinpush-cdn && npm start",
    
    "build": "npm-run-all --parallel build-client build-server",
    "build-client": "cd ./coinpush-client-web && npm run d-build",
    "build-server": "npm-run-all --parallel build-api build-nginx build-cdn",
    "build-api": "cd ./coinpush-api && npm run build",
    "build-nginx": "cd ./coinpush-nginx && npm run build",
    "build-cdn": "cd ./coinpush-cdn && npm run build",
    
    "init": "git submodule update --recursive --init",
    "update": "git submodule update --recursive --remote",
    "commit": "",
    "push": "",
    "kill": "npm-run-all --parallel kill-client kill-server",
    "kill-client": "cd ./coinpush-client-web && docker-compose kill",
    "kill-server": "cd ./coinpush && docker-compose kill",
    "d-rm": "docker-compose rm -f",
    "d-rmi-none": "docker rmi $(docker images --filter 'dangling=true' -q --no-trunc)",
    "d-rmi": "docker rmi -f $(docker images -q)",
    "d-rmi-dangling": "docker rmi $(sudo docker images --filter \"dangling=true\" -q --no-trunc)",
    "d-prune": "docker system prune -f",
    "d-log": "docker-compose logs --tail=30 -f"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DutchKevv/coinpush-wrap.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DutchKevv/coinpush-wrap/issues"
  },
  "homepage": "https://github.com/DutchKevv/coinpush-wrap#readme",
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
}
